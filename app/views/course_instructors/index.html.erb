<p id="notice"><%= notice %></p>

<h1>Course Instructors</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Instructor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_instructors.each do |course_instructor| %>
      <tr>
        <td><%= Course.find(course_instructor.course_id).title %></td>
        <td><%= Instructor.find(course_instructor.instructor_id).name %></td>
        <td><%= link_to 'Show', course_instructor %></td>
        <td><%= link_to 'Edit', edit_course_instructor_path(course_instructor) %></td>
        <td><%= link_to 'Destroy', course_instructor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

