<div class="fields" >
  <p>
    <%= f.label :description, "Question" %> 
    <%= f.text_area :description, cols: 60, rows:3 %>
    <%= f.label :marks %>
    <%= f.text_field :marks, value: 1 %>
  </p>
  <b>Choice</b>

  <%= f.fields_for :choices do |builder| %>  
    <%= render 'choice_fields', fc: builder %>
  <% end %>

  <%= link_to_remove_fields "Remove Question", f %>
</div>
