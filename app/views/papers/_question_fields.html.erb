<fieldset>
  <div >
      <%= f.label :description %> 
      <%= f.text_area :description, cols: 60, rows:3 %>
  </div>
  <div >
      <%= f.label :marks %>
      <%= f.text_field :marks, value: 1 %>
  </div>
  <div >
      <%= f.check_box :_destroy %>
      <%= f.label :_destroy, "Remove Question" %>
  </div>
<%= f.fields_for :choices do |builder| %>	
  <%= render 'choice_fields', f: builder %>
<% end %>
</fieldset>
